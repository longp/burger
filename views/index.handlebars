<div class="well">
  <h1>EAT DA BURGERS </h1>
</div>

<div class="container-fluid">
  <div class="row">   
    <div class="col-md-6"> 
      <table class="table table-condensed">
      <thead><h1> Available Burgers </h1></thead>
        <br>
        {{#each burgers_data}}
        {{#if this.devoured}}
        <tbody>
          <tr>     
            <ul>
              <li> 
                <form method="POST" action="/devour">
                  {{this.burger_name}}
                  <input type="hidden" type="text" name="burger_name" value={{this.burger_name}}>
                  <button type="submit" class="btn btn-sm btn-warning pull-right"> Devour It </button>
                </form> 
              </li>    
            </ul>
          </tr>
        {{/if}} 
        {{/each}} 
        </tbody>
      </table>        
    </div> 
    <div class="col-md-6">
      <table class="table table-condensed">
        <thead><h1>DEVOURED</h1></thead>
        {{#each burgers_data}}
        {{#if this.ready}}
        <tbody>
          <tr>
            <ul>
              <li>
                {{this.burger_name}}
              </li>
            </ul>
          </tr>
          {{/if}}
          {{/each}}
        </tbody>
      </table>  
    </div> 
  </div>
</div>
  <div class="row">
    <div class="col-md-6 col-md-3-offset">
      <form action="/add" method="POST">
        <textarea class="form-control" type="text" name="burger_name" value="" id="enter_text"></textarea>
        <button type="submit" class="btn btn-success"> Add burger</button>
      </form> 
    </div>
  </div>
</div>  